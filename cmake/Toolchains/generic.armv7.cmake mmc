set(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} -fPIC -mfloat-abi=hard -marm -mtune=cortex-a7 -mcpu=cortex-a7 -mfpu=neon-vfpv4 -fomit-frame-pointer -ftree-vectorize -mvectorize-with-neon-quad -ffast-math -DARM_NEON -D__ARM_PCS_VFP")
